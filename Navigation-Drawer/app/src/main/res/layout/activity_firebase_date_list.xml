<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context=".ViewFolders.ListVideoDates">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        android:elevation="4dp"
        android:gravity="end"
        android:orientation="horizontal"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <LinearLayout
            android:id="@+id/buttonLayouts"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:paddingStart="310dp"
            android:paddingBottom="15dp">

            <ImageButton
                android:id="@+id/refreshButtonDates"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:background="@null"
                android:paddingTop="12dp"
                android:src="@drawable/ic_refresh_black_24dp"
                android:visibility="visible" />
        </LinearLayout>
    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:id="@+id/topHeader_dateList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical">

        <ListView
            android:id="@+id/videoDateList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="0dp"
            android:layout_marginTop="47dp"
            android:paddingTop="10dp" />
    </LinearLayout>

</RelativeLayout>